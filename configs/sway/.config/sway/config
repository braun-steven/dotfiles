# -------------- Sway
include /etc/sway/config.d/*

output * bg ~/wallpaper.png fill

# The following is now handled by kanshi
# output eDP-1 scale 1.5 mode 2880x1800@60Hz

# output DP-2 scale 1.5 pos 0 0
# output DP-1 scale 1.5 pos 2560 0


input type:touchpad {
    tap enabled
    natural_scroll enabled
    scroll_factor 0.35
}

input type:keyboard {
  # Capslock key should work as escape key
  # See /usr/share/X11/xkb/rules/xorg.lst for options
  xkb_options ctrl:nocaps
  xkb_layout us
  xkb_variant altgr-intl
  # Typematic delay and rate
  repeat_delay 200
  repeat_rate 40
}

# Mark XWayland windows
for_window [shell="xwayland"] title_format "[XWayland] %title"

# Enable clipboard
exec wl-paste -t text --watch clipman store --no-persist

# Run kanshi: detect correct monitors
exec_always {
  pkill kanshi
  kanshi &
}

# Run waybar as bar
exec_always {
  pkill waybar
  waybar &
}


### Idle configuration
exec swayidle -w \
         timeout 600 'systemctl suspend' \
         before-sleep 'swaylock -f -c 888888'

