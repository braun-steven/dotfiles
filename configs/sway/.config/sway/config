### Idle configuration
# exec swayidle -w timeout 1200 'systemctl suspend'
exec swayidle -w timeout 1200 '$Locker && systemctl suspend-then-hibernate' 
# exec swayidle -w timeout 1200 'systemctl suspend-then-hibernate' before-sleep '$Locker'
# exec swayidle -w timeout 1200 'systemctl suspend-then-hibernate' before-sleep '$Locker'

# Dim screen after inactivity
# brillo -O: save current brightness
# brillo -S 0 -u 150000: set brightness to 0 (150us fade out)
# brillo -I -u 150000: restore brightness (150us fade in)
exec swayidle -w timeout 30 "brillo -O && brillo -S 0 -u 150000" resume "brillo -I -u 150000"

# Turn off screen after inactivity of 3 minutes
exec swayidle -w timeout 180 'swaymsg "output eDP-1 dpms off"' resume 'swaymsg "output eDP-1 dpms on"'

