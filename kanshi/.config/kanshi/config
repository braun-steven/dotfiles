profile "desktop-1" {
    output DP-1 enable scale 1.5 position 2560,0
    output HDMI-A-1 enable scale 1.5 position 0,0
    output eDP-1 disable
}

profile "desktop-2" {
    output DP-2 enable scale 1.5 position 2560,0
    output HDMI-A-1 enable scale 1.5 position 0,0
    output eDP-1 disable
}

profile "mobile" {
    output eDP-1 enable scale 1.5 adaptive_sync on mode 1920x1200@60
}

profile "mani-office" {
    output eDP-1 disable
    output HDMI-A-1 enable scale 1 position 0,0
}

profile "kundes" {
    output eDP-1 enable scale 1.5 adaptive_sync on mode 1920x1200@60 position 0,1080
    output HDMI-A-1 enable scale 2 position 0,0
}
